$(document).ready(function(){
  CarouselSlider();
  ProductCarousel();
  if($(window).width()<750) {
    $('.site-footer__item-inner--link_list').each(function(){
    	var $this = $(this).find('ul');
      $this.hide();
      $(this).find('h4').append("<span class='plus'></span>");
      $(this).find('h4').click(function(){
        $(this).find('span').toggleClass('plus minus');
      	$this.slideToggle(300);
      });
    });
  }
});
$(document).on('shopify:section:load', function() {
  CarouselSlider();
  ProductCarousel();
});
$(document).on('shopify:section:unload', function() {
  CarouselSlider();
  ProductCarousel();
});
$(document).on('shopify:section:select', function() {
  CarouselSlider();
  ProductCarousel();
});
$(document).on('shopify:section:deselect', function() {
  CarouselSlider();
  ProductCarousel();
});
$(document).on('shopify:block:select', function() {
  CarouselSlider();
  ProductCarousel();
});
$(document).on('shopify:block:deselect', function() {
  CarouselSlider();
  ProductCarousel();
});

function CarouselSlider(){
  $('.carousel-slider').slick({
    infinite: true,
    slidesToShow: 1,
    autoplay: true,
    autoplaySpeed: 4000,
    prevArrow:"<button type='button' class='slick-prev'><img src='{{'arrow_left.png' | asset_url}}'/></button>",
    nextArrow:"<button type='button' class='slick-next'><img src='{{'arrow_right.png' | asset_url}}'/></button>"
  });
  
  $('.mobile-carousel-slider').slick({
    infinite: true,
    slidesToShow: 1,
    autoplay: true,
    autoplaySpeed: 4000,
    prevArrow:"<button type='button' class='slick-prev'><img src='{{'arrow_left.png' | asset_url}}'/></button>",
    nextArrow:"<button type='button' class='slick-next'><img src='{{'arrow_right.png' | asset_url}}'/></button>"
  });
}
function ProductCarousel(){
  $('.product_carousel').slick({
    infinite: true,
    slidesToShow: 4,
    slidesToScroll: 4,
    prevArrow:"<button type='button' class='slick-prev'><img src='{{'arrow_left.png' | asset_url}}'/></button>",
    nextArrow:"<button type='button' class='slick-next'><img src='{{'arrow_right.png' | asset_url}}'/></button>",
    responsive: [
      {
        breakpoint: 1024,
        settings: {
          slidesToShow: 3,
          slidesToScroll: 3,
          infinite: true,
          dots: true
        }
      },
      {
        breakpoint: 600,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 2
        }
      },
      {
        breakpoint: 480,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 1,
  		    //centerMode: true,
  		    //centerPadding: '40px',
        }
      }

    ]
  });
}

if ($('.collapse').length > 0) {
  $('.collapse').collapse();
}
