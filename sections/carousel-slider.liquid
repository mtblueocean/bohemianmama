<div class="carousel-slider-section" data-section-id="{{ section.id }}" data-section-type="carousel-slider-section">
  {% if section.blocks.size > 0 %}
  <div class="carousel-wrapper">
    <div class="carousel-slider">
      {% for block in section.blocks %}
        {% if block.settings.image == blank %}
          <div>
            {% capture current %}{% cycle 1, 2 %}{% endcapture %}
            {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% else %}
          <div>
            {% if block.settings.link != blank %}<a href="{{block.settings.link}}">{% endif %}
            <img src="{{ block.settings.image | img_url: '1920x' }}" alt="{{block.settings.image.alt}}"/>
            {% if block.settings.link != blank %}</a>{% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <div class="mobile-carousel-slider">
      {% for block in section.blocks %}
        {% if block.settings.mobile_image == blank %}
          <div>
            {% if block.settings.link != blank %}<a href="{{block.settings.link}}">{% endif %}
            <img src="{{ block.settings.image | img_url: '750x' }}" alt="{{block.settings.image.alt}}"/>
            {% if block.settings.link != blank %}</a>{% endif %}
          </div>
        {% else %}
          <div>
            {% if block.settings.link != blank %}<a href="{{block.settings.link}}">{% endif %}
            <img src="{{ block.settings.mobile_image | img_url: '750x' }}" alt="{{block.settings.mobile_image.alt}}"/>
            {% if block.settings.link != blank %}</a>{% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  {% endif %}
  {% if section.blocks.size == 0 %}
  <div class="placeholder-noblocks">
    {{ 'homepage.onboarding.no_content' | t }}
  </div>
  {% endif %}
</div>
