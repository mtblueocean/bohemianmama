{% if section.settings.enable_section %}
<div class="gift_card_banner"> 
  <a href="{{ section.settings.link}}">
    <h1 class="desktop-banner"><img src="{{ section.settings.image | img_url: '2048x' }}" class="img-fluid" alt="Boho Holiday Free-Spirited Gifts"></h1>

    {% if section.settings.mobile_image == blank %}
      <h1 class="mobile-banner"><img src="{{ section.settings.image | img_url: '750x' }}" class="img-fluid" alt="Boho Holiday Free-Spirited Gifts"></h1>
    {% else %}
      <h1 class="mobile-banner"><img src="{{ section.settings.mobile_image | img_url: '750x' }}" class="img-fluid" alt="Boho Holiday Free-Spirited Gifts"></h1>
    {% endif %}
  </a>
</div>
{% endif %}

{% schema %}
  {
    "name": "Gift banner",
	  "settings": [
      {
        "type": "checkbox",
        "id": "enable_section",
        "label": "Enable Section",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image" 
      },
      {
        "type": "image_picker",
        "id": "mobile_image",
        "label": "Mobile Image" 
      },
      {
        "type": "url",
        "id": "link",
        "label": "link" 
      }
    ]
  }
{% endschema %}
