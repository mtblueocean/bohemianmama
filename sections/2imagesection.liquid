{% if section.settings.enable_section %}
<div class="page-width indexx-section two_img_section">
  <div class="row">
    <div class="col-sm-6 mb-3 mb-sm-0 mb-md-0">
      <a href="{{ section.settings.link1}}">
    <img src="{{ section.settings.image1 | img_url: '2048x' }}" class="img-fluid" alt="Free-Spirited Gifts">
   </a>
  </div>
     <div class="col-sm-6 mb-3 mb-sm-0 mb-md-0">
   <a href="{{ section.settings.link2}}">
    <img src="{{ section.settings.image2 | img_url: '2048x' }}" class="img-fluid" alt="Boho Holiday">
   </a>
  </div>
  </div>
</div>
{% endif %}

{% schema %}
  {
    "name": "2 image section",
	  "settings": [
      {
        "type": "checkbox",
        "id": "enable_section",
        "label": "Enable Section",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "image1",
        "label": "Image 1" 
      },
      {
        "type": "url",
        "id": "link1",
        "label": "link 1" 
      },
      {
        "type": "image_picker",
        "id": "image2",
        "label": "Image 2" 
      },
      {
        "type": "url",
        "id": "link2",
        "label": "link 2" 
      }
    ]
  }
{% endschema %}
