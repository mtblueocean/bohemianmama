{% if section.settings.enable_section %}
<div class="gift_card_banner index-section" style="margin-bottom: 0;"> 
  <a href="{{ section.settings.link}}">
    <img class="desktop-banner" src="{{ section.settings.image | img_url: '2048x' }}" class="img-fluid" alt="Boho Holiday">

    {% if section.settings.mobile_image == blank %}
      <img class="mobile-banner" src="{{ section.settings.image | img_url: '750x' }}" class="img-fluid" alt="Boho Holiday">
    {% else %}
      <img class="mobile-banner" src="{{ section.settings.mobile_image | img_url: '750x' }}" class="img-fluid" alt="Boho Holiday">
    {% endif %}
  </a>
</div>
{% endif %}

{% schema %}
  {
    "name": "Gift banner",
	  "settings": [
      {
        "type": "checkbox",
        "id": "enable_section",
        "label": "Enable Section",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image" 
      },
      {
        "type": "image_picker",
        "id": "mobile_image",
        "label": "Mobile Image" 
      },
      {
        "type": "url",
        "id": "link",
        "label": "link" 
      }
    ]
  }
{% endschema %}
